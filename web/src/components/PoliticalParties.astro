---
import { politicalParties } from '@data/political_parties'
---

<section>
  {
    politicalParties.map(({ title, png, height, width, link }) => {
      return (
        <a href={link}>
          <img title={title} src={png} height={height} width={width} />
        </a>
      );
    })
  }
</section>

<style>
  img {
    transition-property: scale;
    transition-duration: 0.2s;
    object-fit: contain;
  }
  img:hover {
    scale: 1.3;
  }
  section {
    margin: 3em 0;
    display: flex;
    justify-content: center;
    gap: 3em;
    align-self: center;
  }
</style>
